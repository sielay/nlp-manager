{
  "target": "es5",
  "module": "commonjs",
  "lib": ["ESNext"],

  /* Strict Type-Checking Options */
  "strict": true,

  /* Module Resolution Options */
  "moduleResolution": "node",
  "esModuleInterop": true,

  /* Advanced Options */
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/tests/**", "**/dist/**"],
  "paths": {
    "*": ["node_modules/*"],
    "@nlp-manager/shared": ["./packages/nlp-manager-shared"],
    "@nlp-manager/ui": ["./packages/nlp-manager-ui"]
  }
}
