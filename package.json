{
  "name": "@nlp-manager/packages",
  "version": "0.1.0",
  "repository": "git@github.com:sielay/nlp-manager.git",
  "author": "≈Åukasz Marek Sielski <lukaszsielski@gmail.com>",
  "description": "Web/Desktop tool for managing and testing bots based on nlp.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@electron/*",
      "**/@electron-forge/*",
      "**/electron*",
      "**/cross-spawn",
      "**/shebang-command",
      "**/shebang-regex",
      "**/craco",
      "**/ts-jest",
      "**/jest"
    ]
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^4.16.1",
    "commitizen": "^4.0.3",
    "concurrently": "5.2.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.11",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "if-env": "^1.0.4",
    "lerna": "^6.1.0",
    "lint-staged": "^10.5.4",
    "mol-conventional-changelog": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.3.5",
    "wait-on": "5.1.0",
    "yarn": "1.22.10"
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "scripts": {
    "postinstall": "[ \"$HUSKY\" != 0 ] && husky install || true",
    "dev:electron": "lerna exec --parallel 'yarn run dev:electron'",
    "dev:ui": "yarn workspace @nlp-manager/shared run dev & yarn workspace @nlp-manager/ui run start",
    "typeCheck": "yarn workspaces run typeCheck",
    "test": "lerna run test",
    "lint": "yarn typeCheck && eslint packages/*/src/**/*.{js,ts,tsx} --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "lint-staged": {
    "*.(t|j)(s|sx)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ],
    "*.{md,css,scss,yaml,yml,json,html}": "prettier --write"
  },
  "dependencies": {}
}
