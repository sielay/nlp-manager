{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@nlp-manager/ui": ["../nlp-manager-ui"],
      "@nlp-manager/shared": ["../nlp-manager-shared"]
    }
  },
  "include": ["src/**/*"]
}
